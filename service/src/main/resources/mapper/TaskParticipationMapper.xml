<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaodou.mapper.TaskParticipationMapper">

    <!--
        自定义分页查询，关联微信用户表以获取用户昵称
        - 使用 LEFT JOIN 关联 wechat_user 表
        - wu.nickname AS userName 将查询结果映射到 VO 的 userName 字段
        - 使用 <if> 标签实现动态条件查询
    -->
    <select id="selectPageWithDetails" resultType="com.xiaodou.model.vo.TaskParticipationVO">
        SELECT
            tp.*,
            wu.nickname AS userName
        FROM
            task_participation tp
        LEFT JOIN
            wechat_user wu ON tp.user_id = wu.id
        <where>
            <if test="query.taskId != null and query.taskId != ''">
                AND tp.task_id = #{query.taskId}
            </if>
            <if test="query.userId != null and query.userId != ''">
                AND tp.user_id = #{query.userId}
            </if>
            <if test="query.status != null">
                AND tp.status = #{query.status}
            </if>
        </where>
        ORDER BY
            tp.created_at DESC
    </select>

</mapper>
